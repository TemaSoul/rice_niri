{
    "layer": "top",
    "position": "top",
    "height": 24,
    "modules-left": ["niri/workspaces", "niri/window"],
    "modules-center": [],
    "modules-right": ["niri/language", "clock"],
    
    "niri/workspaces": {
        "format": "{index}",
        "all-outputs": true,
        "persistent-workspaces": {
            "*": 6
        }
    },

    "niri/window": {
        "format": "{}",
        "separate-outputs": true
    },

    "cpu": {
        "interval": 10,
        "format": "| cpu {usage}%",
        "tooltip": false
    },

    "custom/gpu": {
        "interval": 5,
        "exec": "nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits",
        "format": "| gpu {}%",
        "tooltip": false
    },


    "memory": {
        "interval": 30,
        "format": "| ram {used:0.1f} gb",
        "tooltip": false
    },

    "niri/language": {
        "format": "{}",
        "format-en": "| us",
        "format-ru": "| ru"
    },

    "clock": {
        "interval": 1,
        "format": "| {:%H:%M:%S}",
        "tooltip": false
    }
}
